{% extends 'configuration/site/base.html.twig' %}

{% block body_id 'configuration_site_edit' %}

{% block configuration %}
    {{ parent() }}
    <div class="well col-lg-7">

        <h2>{{ 'Configuration.Titles.SiteEdition' | trans({}, 'configuration_labels') }}</h2>

        {{ form_start(form, {'method': 'post', 'action': path('configuration_site_edit', {siteId: siteId}), 'attr': {'onsubmit':"return onSubmitSiteForm(false, $(this), "~ siteId ~", $('#app_site_edition_reportDataSourceId').val(), $('#app_site_edition_overwriteReportDataSourceId'));"}}) }}
        {{ form_widget(form) }}
        <div>
            <input class="btn btn-sm btn-danger" type="submit" value="{{ 'Save'|trans }}" />
            <a href="{{ path('configuration_sites') }}"><input class="btn btn-sm btn-primary" type="button" value="{{ 'Cancel'|trans }}" formnovalidate/></a>
        </div>
        {{ form_end(form) }}

    </div>

{% endblock %}
