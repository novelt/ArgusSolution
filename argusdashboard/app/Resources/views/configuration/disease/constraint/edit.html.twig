{% extends 'configuration/index.html.twig' %}

{% block body_id 'configuration_disease_constraint_edit' %}

{% block configuration %}

    <div class="well col-lg-7">

        <h2>{{ 'Configuration.Titles.DiseaseConstraintEditionForDisease' | trans({'Disease': diseaseName}, 'configuration_labels') }}</h2>

        {{ form_start(form, {'method': 'post', 'action': path('configuration_disease_constraint_edit', {diseaseId: diseaseId, diseaseConstraintId: diseaseConstraintId})}) }}
        {{ form_widget(form) }}
        <div>
            <input class="btn btn-sm btn-danger" type="submit" value="{{ 'Save'|trans }}" />
            <a href="{{ path('configuration_disease_constraints', {'diseaseId': diseaseId}) }}"><input class="btn btn-sm btn-primary" type="button" value="{{ 'Cancel'|trans }}" formnovalidate/></a>
        </div>
        {{ form_end(form) }}

    </div>

{% endblock %}
