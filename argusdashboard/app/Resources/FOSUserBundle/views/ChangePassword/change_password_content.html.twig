{% trans_default_domain 'FOSUserBundle' %}

<div class="well col-lg-7">
    <h3>{{ 'form.new_password'|trans }}</h3>
    <br />
    {{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
        {{ form_widget(form) }}
        <div>
            <input class="btn btn-sm btn-danger" type="submit" value="{{ 'change_password.submit'|trans }}" />
        </div>
    {{ form_end(form) }}
</div>

