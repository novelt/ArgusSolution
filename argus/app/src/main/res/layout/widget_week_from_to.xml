<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/OMSCardView"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/report_number_height"
    android:layout_gravity="center_vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/widget_week_from_to_TextView_from"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom|right"
                android:textColor="@color/oms_grey"
                android:textSize="@dimen/text_normal"
                tools:text="du 07/10"/>

            <TextView
                android:id="@+id/widget_week_from_to_TextView_to"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="top|right"
                android:textColor="@color/oms_grey"
                android:textSize="@dimen/text_normal"
                tools:text="au 07/10"/>
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:background="@color/oms_grey"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/widget_week_from_to_TextView_week"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/oms_grey"
            android:textSize="@dimen/text_big"
            tools:text="31"/>
        <TextView
            android:id="@+id/widget_week_from_to_TextView_year"
            android:layout_width="40dp"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:textColor="@color/oms_grey"
            android:textSize="@dimen/text_small"
            tools:text="31"/>
    </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>