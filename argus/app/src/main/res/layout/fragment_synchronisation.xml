<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.argus.sms.app.fragment.FragmentSynchronization">

    <Button
        android:id="@+id/fragment_synchronisation_Button_sync"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/sync"/>

    <TextView
        android:id="@+id/fragment_synchronisation_TextView_lastsync"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/fragment_synchronisation_Button_sync"
        android:gravity="center_horizontal"
        android:paddingBottom="5dp"
        tools:text="Dernière synchronisation le 17/04/2014 à 9h15"/>

    <ProgressBar
        android:id="@+id/fragment_synchronisation_ProgressBar"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/fragment_synchronisation_TextView_sync_in_progress_since"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_synchronisation_ProgressBar"
        android:gravity="center_horizontal"
        android:paddingTop="5dp"
        tools:text="Synchronisation demandée à 9h15"/>

    <Button
        android:id="@+id/fake_synch_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/fake_synch"
        android:layout_below="@+id/fragment_synchronisation_Button_sync"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
