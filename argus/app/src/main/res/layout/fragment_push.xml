<ScrollView
    android:id="@android:id/list"
    style="@style/oms_scrollbarstyle"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="org.argus.sms.app.fragment.FragmentPush">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fragment_push_TextView_alert"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                style="@style/oms_sendbutton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/skip"
                android:id="@+id/fragment_push_Button_pass"
                android:textColor="@color/oms_white"/>

            <Button
                style="@style/oms_sendbutton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/history"
                android:id="@+id/fragment_push_Button_history"
                android:textColor="@color/oms_white"/>
        </LinearLayout>
    </LinearLayout>

</ScrollView>