<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_view_Dialog_Password_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/enter_new_password">
    </TextView>

    <EditText
        android:id="@+id/edit_Text_Dialog_Password_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword" >
        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/text_view_Dialog_Password_settings_confirmation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/confirm_new_password">
    </TextView>

    <EditText
        android:id="@+id/edit_Text_Dialog_Password_settings_confirmation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword" >
    </EditText>

</LinearLayout>